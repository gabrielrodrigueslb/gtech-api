generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  name          String
  email         String        @unique
  password      String
  role          Role          @default(USER)
  active        Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  notes         Note[]
  opportunities Opportunity[]
}

model Contact {
  id            String        @id @default(uuid())
  name          String
  phone         String?
  email         String?
  segment       String?
  createdAt     DateTime      @default(now())
  opportunities Opportunity[] @relation("ContactOpportunity")
}

model Pipeline {
  id            String        @id @default(uuid())
  name          String
  opportunities Opportunity[]
  stages        Stage[]
}

model Stage {
  id            String        @id @default(uuid())
  name          String
  order         Int
  pipelineId    String
  color         String
  opportunities Opportunity[]
  pipeline      Pipeline      @relation(fields: [pipelineId], references: [id])
}

model Opportunity {
  id              String            @id @default(cuid())
  title           String
  description     String?
  amount          Float?
  recurringAmount Float?
  probability     Int?
  dueDate         DateTime?
  status          OpportunityStatus @default(OPEN)
  wonLostReason   String?
  ownerId         String
  pipelineId      String
  stageId         String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  address         String?
  contactNumber   String?
  website         String?
  notes           Note[]
  owner           User              @relation(fields: [ownerId], references: [id])
  pipeline        Pipeline          @relation(fields: [pipelineId], references: [id])
  stage           Stage?            @relation(fields: [stageId], references: [id])
  contacts        Contact[]         @relation("ContactOpportunity")
}

model Note {
  id            String      @id @default(cuid())
  message       String
  createdAt     DateTime    @default(now())
  userId        String
  opportunityId String
  opportunity   Opportunity @relation(fields: [opportunityId], references: [id])
  user          User        @relation(fields: [userId], references: [id])
}

model Categorias {
  id        Int        @id @default(autoincrement())
  name      String
  projetos  Projetos[]
  Posts     Post[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Projetos {
  id           Int        @id @default(autoincrement())
  title        String
  categoryId   Int
  tags         String[]
  banner       String
  images       String[]
  description  String
  challenge    String
  solution     String
  technologies String[]
  year         Int
  role         String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  category     Categorias @relation(fields: [categoryId], references: [id])
}

model Post {
  id Int @id @unique @default(autoincrement())

  slug    String  @unique
  title   String
  excerpt String?

  content     String
  contentType ContentType @default(MARKDOWN)

  status      PostStatus @default(DRAFT)
  publishedAt DateTime?   @default(now())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  author String

  categoryId Int
  category   Categorias @relation(fields: [categoryId], references: [id])

  featuredImage String
  readTime      String

  @@index([slug])
  @@index([status, publishedAt])
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum ContentType {
  MARKDOWN
  HTML
}

enum Role {
  ADMIN
  USER
}

enum OpportunityStatus {
  OPEN
  WON
  LOST
}
