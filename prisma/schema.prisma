generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(uuid())
  name            String
  email           String          @unique
  password        String

  role            Role            @default(USER)
  active          Boolean         @default(true)

  opportunities   Opportunity[]
  notes           Note[]

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

enum Role {
  ADMIN
  USER
}

//
// CONTACT
//
model Contact {
  id              String          @id @default(uuid())
  name            String?
  phone           String?
  email           String?
  segment         String?

  opportunities   Opportunity[]   @relation("ContactOpportunity")

  createdAt       DateTime        @default(now())
}

//
// PIPELINE (FUNIL)
//
model Pipeline {
  id              String          @id @default(uuid())
  name            String

  stages          Stage[]
  opportunities   Opportunity[]
}

//
// STAGE (ETAPA)
//
model Stage {
  id              String          @id @default(uuid())
  name            String
  order           Int
  color           String

  pipeline        Pipeline        @relation(fields: [pipelineId], references: [id])
  pipelineId      String

  opportunities   Opportunity[]
}

//
// OPPORTUNITY (OPORTUNIDADE)
//
model Opportunity {
  id                String        @id @default(cuid())
  title             String
  description       String?
  amount            Float?
  recurringAmount   Float?
  probability       Int?
  dueDate           DateTime?
  status            OpportunityStatus  @default(OPEN)
  wonLostReason     String?            // optional manual reason

  // Relations
  contacts          Contact[]         @relation("ContactOpportunity")

  owner             User              @relation(fields: [ownerId], references: [id])
  ownerId           String

  pipeline          Pipeline          @relation(fields: [pipelineId], references: [id])
  pipelineId        String

  stage             Stage?            @relation(fields: [stageId], references: [id])
  stageId           String?

  notes             Note[]

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}

enum OpportunityStatus {
  OPEN
  WON
  LOST
}

//
// NOTE
//
model Note {
  id              String         @id @default(cuid())
  message         String
  createdAt       DateTime       @default(now())

  user            User           @relation(fields: [userId], references: [id])
  userId          String

  opportunity     Opportunity    @relation(fields: [opportunityId], references: [id])
  opportunityId   String
}
